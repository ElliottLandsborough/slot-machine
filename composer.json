{
    "name": "elliott/slot-machine",
    "description": "A basic command line slot machine game in PHP",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "SlotMachine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "game": "php game.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}